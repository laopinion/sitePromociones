{
  "name": "promociones",
  "version": "2.0.0",
  "description": "Site dedicado a las promociones",
  "main": "server.js",
  "scripts": {
    "dev": "node server.js",
    "build": "next build",
    "start": "NODE_ENV=production node server.js",
    "startWind": "cross-env NODE_ENV=production node server.js",
    "deploybot": "babel server -d dist/server",
    "lint": "standard --fix"
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "commonjs": true,
      "es6": true,
      "node": true,
      "jquery": true
    },
    "parser": "babel-eslint",
    "rules": {
      "no-console": "warn",
      "no-use-before-define": "warn",
      "spaced-comment": "warn"
    },
    "extends": [
      "standard",
      "standard-jsx"
    ]
  },
  "eslintIgnore": [
    "/node_modules/*",
    "build/*",
    "!build/index.js",
    "bundle.js",
    "dist/*",
    ".*/*",
    ".*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/laopinion/sitePromociones.git"
  },
  "keywords": [
    "promociones"
  ],
  "author": "LaOpinion",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/laopinion/sitePromociones/issues"
  },
  "homepage": "https://github.com/laopinion/sitePromociones#readme",
  "dependencies": {
    "express": "^4.17.1",
    "next": "8.1.0",
    "react": "16.8.6",
    "react-dom": "16.8.6",
    "react-markdown": "^4.0.8"
  },
  "devDependencies": {
    "cross-env": "^5.2.0"
  }
}
